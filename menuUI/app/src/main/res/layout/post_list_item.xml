<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    >
    <!--
    <Button
        android:id="@+id/thums_up_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:text="+" />
    -->

    <ImageButton
        android:id="@+id/thums_up_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/thumbs_up_24"
        android:backgroundTint="@color/colorTransparent"/>

    <TextView
        android:id="@+id/thums_cnt_tv"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/thums_up_btn"
        android:textAlignment="center"
        android:text="1" />

    <ImageView
        android:id="@+id/post_food_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/thums_up_btn"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/thums_down_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thums_cnt_tv"
        android:src="@drawable/thumbs_down_24"
        android:backgroundTint="@color/colorTransparent"/>

    <TextView
        android:id="@+id/text_where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/post_food_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:text="Where?"/>

    <TextView
        android:id="@+id/text_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/post_food_iv"
        android:layout_below="@id/text_where"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Menu?"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/post_location"
        android:layout_width="145dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/text_where"
        android:layout_toRightOf="@id/text_where"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:text="Seoul Jongro"/>

    <TextView
        android:id="@+id/post_menu"
        android:layout_width="140dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/text_menu"
        android:layout_toRightOf="@id/text_menu"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:text="Chicken &amp; Beer"/>

    <TextView
        android:id="@+id/post_comments_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_menu"
        android:layout_alignLeft="@id/text_menu"
        android:layout_marginTop="5dp"
        android:text="n "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_menu"
        android:layout_toRightOf="@id/post_comments_num"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="Comments"/>

    <ImageButton
        android:id="@+id/add_wish_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/heart_off_32"
        android:background="@android:color/transparent"/>
</RelativeLayout>