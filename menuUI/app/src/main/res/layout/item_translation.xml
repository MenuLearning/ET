<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_translation_korean_tv"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="Korean Menu"/>

        <TextView
            android:id="@+id/item_translation_result_tv"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="English Menu"/>

        <TextView
            android:id="@+id/item_translation_price_tv"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:text="Price"/>

        <ImageButton
            android:id="@+id/item_translation_more_info_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_down_24"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:backgroundTint="@android:color/transparent"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <View
        android:id="@+id/item_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:background="@color/dark_grey"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/item_translation_explanation_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:visibility="gone" />
</LinearLayout>